<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="TitleStyle">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">40px</item>
        <item name="android:tag">B</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SubTitleStyle">
        <item name="android:textColor">#c5c5c5</item>
        <item name="android:textSize">32px</item>
    </style>

    <style name="CircleImagePadding">
        <item name="android:paddingRight">60px</item>
        <item name="android:paddingBottom">60px</item>
        <item name="android:layout_width">190px</item>
        <item name="android:layout_height">190px</item>
    </style>
</resources>
